#keypad { margin-top:10px; }
</style>
</head>
<body>

<h2>Enter Password</h2>
<input type="password" id="pwd" placeholder="Password" readonly><br>

<div id="keypad">
  <!-- Numeric buttons -->
  <button onclick="press('1')">1</button>
  <button onclick="press('2')">2</button>
  <button onclick="press('3')">3</button><br>
  <button onclick="press('4')">4</button>
  <button onclick="press('5')">5</button>
  <button onclick="press('6')">6</button><br>
  <button onclick="press('7')">7</button>
  <button onclick="press('8')">8</button>
  <button onclick="press('9')">9</button><br>
  <button onclick="press('0')">0</button>
  <button onclick="clearPwd()">C</button>
  <button onclick="check()">OK</button>
</div>

<p id="msg"></p>

<script>
function press(n){
  document.getElementById('pwd').value += n;
}

function clearPwd(){
  document.getElementById('pwd').value = '';
}

function check(){
  var p = document.getElementById('pwd').value;
  if(p === "1234"){  // Your password
    document.getElementById('msg').innerHTML = "Access Granted ✅";
  } else {
    document.getElementById('msg').innerHTML = "Wrong Password ❌";
    clearPwd();
  }
}
</script>

